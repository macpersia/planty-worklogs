#!/bin/bash

# Added by Hadi
export JAVA_HOME="/usr/lib/jvm/java-1.8.0-openjdk"
export PATH="$JAVA_HOME/bin:$PATH"
cd $OPENSHIFT_REPO_DIR
mkdir ./fakehome
export JAVA_OPTS="-Xms256m -Xmx512m -XX:MetaspaceSize=64m -XX:MaxMetaspaceSize=128m -Duser.home=$OPENSHIFT_REPO_DIR/fakehome"
cd $OPENSHIFT_REPO_DIR/planty-jira-view
../sbt/bin/sbt -v -Dsbt.log.noformat=true publishLocal
cd $OPENSHIFT_REPO_DIR/planty-jira-web
../sbt/bin/sbt -v -Dsbt.log.noformat=true stage

